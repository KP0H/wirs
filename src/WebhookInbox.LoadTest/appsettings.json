{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "LoadTest": {
    "BaseUrl": "http://api:8080",
    "StartupDelaySeconds": 25,
    "RequestsPerSecond": 1.5,
    "Concurrency": 3,
    "DurationSeconds": 0,
    "Sources": [
      {
        "Source": "github",
        "Provider": "github",
        "SecretEnvVar": "WEBHOOKINBOX_GITHUB_SECRET",
        "ValidRatio": 0.6,
        "InvalidSignatureRatio": 0.2,
        "MissingSignatureRatio": 0.1,
        "ReplayRatio": 0.1
      },
      {
        "Source": "stripe",
        "Provider": "stripe",
        "SecretEnvVar": "WEBHOOKINBOX_STRIPE_SECRET",
        "ToleranceSeconds": 300,
        "ValidRatio": 0.6,
        "InvalidSignatureRatio": 0.2,
        "MissingSignatureRatio": 0.05,
        "ExpiredSignatureRatio": 0.15
      }
    ]
  }
}
